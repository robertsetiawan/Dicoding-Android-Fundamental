<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingTop="30dp"
    android:paddingEnd="12dp"
    android:paddingBottom="12dp"
    tools:context=".UserDetailActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="124dp"
        android:layout_height="124dp"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        tools:src="@drawable/user1" />

    <TextView
        android:id="@+id/user_title_tv"
        style="@style/TextAppearance.Material3.TitleMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        tools:text="@string/app_name" />


    <Button
        android:id="@+id/username_button"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_baseline_share_24"
        tools:text="@string/app_name" />

    <TextView
        style="@style/CustomTextSubtitle"
        android:text="@string/total_followers"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/follower_tv"
        style="@style/CustomNormalText"
        android:textAlignment="center" />

    <TextView
        style="@style/CustomTextSubtitle"
        android:layout_marginTop="16dp"
        android:text="@string/total_following"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/following_tv"
        style="@style/CustomNormalText"
        android:textAlignment="center" />

    <TextView
        style="@style/CustomTextSubtitle"
        android:layout_marginTop="16dp"
        android:text="@string/company"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/company_tv"
        style="@style/CustomNormalText"
        android:textAlignment="center" />

    <TextView
        style="@style/CustomTextSubtitle"
        android:layout_marginTop="16dp"
        android:text="@string/location"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/location_tv"
        style="@style/CustomNormalText"
        android:textAlignment="center" />

    <TextView
        style="@style/CustomTextSubtitle"
        android:layout_marginTop="16dp"
        android:text="@string/repository"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/repository_tv"
        style="@style/CustomNormalText"
        android:textAlignment="center" />

</LinearLayout>